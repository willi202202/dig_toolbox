#!/bin/bash
# Aliase für lokale Python-Skripte


SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

alias dice="python3 $SCRIPT_DIR/dice.py"
alias dec2bin="python3 $SCRIPT_DIR/dec2bin.py"
alias bin2dec="python3 $SCRIPT_DIR/bin2dec.py"
alias kmap="python3 $SCRIPT_DIR/kmap.py"
alias bit="python3 $SCRIPT_DIR/bit.py"
alias bool="python3 $SCRIPT_DIR/bool.py"
alias csv2term="python3 $SCRIPT_DIR/csv2term.py"

echo ""
echo "Digitaltechnik Toolbox:"
echo "--------------------------"
echo "dice     → Würfel (ASCII)                   Usage: dice [NrOfDice]"
echo "dec2bin  → Dezimal → Binär                  Usage: dec2bin <Zahl> <NrOfIntBits> <NrOfFracBits>"
echo "bin2dec  → Binär → Dezimal                  Usage: bin2dec <Bin[.Bin]>"
echo "kmap     → Karnaugh-Map                     Usage: kmap [-M] <vars> <Maxterm RowNr>"
echo "bit      → Bit Manipulation                 Usage: bit --clear 11110000 4"
echo "bool     → Minimierung / Wahrheitstabelle   Usage: bool '!A*!B*!C + !A*B*!C + A*B*!C + A*B*C' --dc 'A*!B*!C + A*!B*C' --v 'A B C' --csvfull"
echo "csv2term → Minterme & Maxterme aus Tabelle  Usage: csv2term <path_to_csv>"
echo ""

# Windows:
# & C:/msys64/mingw64/bin/python3.exe d:/Projekte_GITHub/dig_toolbox/dice.py 4
# & C:/msys64/mingw64/bin/python3.exe d:/Projekte_GITHub/dig_toolbox/dec2bin.py 285.25 10 2
# & C:/msys64/mingw64/bin/python3.exe d:/Projekte_GITHub/dig_toolbox/bin2dec.py 0100011101.01
# & C:/msys64/mingw64/bin/python3.exe d:/Projekte_GITHub/dig_toolbox/kmap.py "A B C" "1,3,7,6"
# & C:/msys64/mingw64/bin/python3.exe d:/Projekte_GITHub/dig_toolbox/bit.py --clear 11110000 4
# & C:/msys64/mingw64/bin/python3.exe d:/Projekte_GITHub/dig_toolbox/bool.py '!A*!B*!C + !A*B*!C + A*B*!C + A*B*C' --dc 'A*!B*!C + A*!B*C' --v 'A B C' --csvfull
# & C:/msys64/mingw64/bin/python3.exe d:/Projekte_GITHub/dig_toolbox/csv2term.py d:/Projekte_GITHub/dig_toolbox/tab.csv
